<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/title_sc" >

                        <Button
					        android:id="@+id/msf_verify_button_back"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_centerVertical="true"
					        android:background="@null"
					        android:paddingRight="20dp"
					        android:paddingLeft="20dp"
					        android:paddingTop="10dp"
					        android:paddingBottom="10dp"
					        android:drawableLeft="@drawable/mm_title_back_btn"
					        android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/msf_top_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/mui_f18" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="0px"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/main_v"
                        android:gravity="center_horizontal|bottom"
                        android:paddingBottom="10dp" >

                        <TextView
                            android:id="@+id/msf_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="王师傅"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="，您已完成 "
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/msf_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textColor="#7ED321"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 次上门安装服务"
                            android:textColor="#fff"
                            android:textSize="16dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务确认码"
                            android:textColor="@color/mui_c1"
                            android:textSize="@dimen/mui_f16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/mui_c0"
                            android:textSize="@dimen/mui_f16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dip"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/msf_vcode_EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/mmater_mui_input"
                            android:digits="0123456789qwertyupasdfghjklxcvbnmQWERTYUPASDFGHJKLXCVBNM"
                            android:hint="请输入10位服务确认码"
                            android:inputType="number"
                            android:maxLength="11"
                            android:scrollbars="vertical"
                            android:textColorHint="#cccccc"
                            android:textSize="@dimen/mui_f16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="安装效果图"
                            android:textColor="@color/mui_c1"
                            android:textSize="@dimen/mui_f16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/mui_c0"
                            android:textSize="@dimen/mui_f16" />
                    </LinearLayout>

                    <GridView
					        android:id="@+id/msf_id_gridView"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        android:cacheColorHint="@android:color/transparent"
					        android:clipChildren="true"
					        android:gravity="center"
					        android:listSelector="@android:color/transparent"
					        android:numColumns="4"
					        android:layout_marginLeft="20dp"
	                        android:layout_marginRight="20dp"
	                        android:layout_marginTop="10dp" >
					</GridView>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/msf_verify_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tm_mui_btn_red"
                            android:onClick="checkVcode"
                            android:text="完成"
                            android:textColor="@android:color/white"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/msf_forget_vcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#0000"
                            android:drawableRight="@drawable/iconfont_qj"
                            android:gravity="center"
                            android:onClick="forgetVcode"
                            android:text="消费者找不到服务确认码？点这里"
                            android:textColor="#777777"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <com.alibaba.sdk.android.msf.widget.ListViewForScrollView
                        android:id="@+id/msf_mListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:descendantFocusability="afterDescendants"
                        android:divider="#fff"
                        android:dividerHeight="0.0dip"
                        android:listSelector="@android:color/transparent"
                        android:paddingBottom="40dp" />
                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/msf_masklayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" >
            </RelativeLayout>
        </RelativeLayout>

</FrameLayout>