<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/openCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开摄像头" 
        android:onClick="openCamera"/>

    <Button
        android:id="@+id/showMedicineMaViewButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showMedicineMaView"
        android:text="@string/open_medicine_ma_view" />

    <Button
        android:id="@+id/showGoodMaViewButtion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showGoodMaView"
        android:text="@string/open_good_ma_view" />

   

</LinearLayout>