<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ConverationStyle_default" parent="@style/Aliwx_ContentOverlay">

        <!-- 标题栏背景色 -->
        <item name="aliwx_title_backgroud">@color/aliwx_common_bg_white_color</item>
        <!-- 标题栏字体颜色 -->
        <item name="aliwx_title_textcolor">@color/aliwx_common_text_color</item>
        <!-- 标题栏字体大小 -->
        <item name="aliwx_title_textsize">@dimen/aliwx_common_text_size</item>
        <!-- 背景色 -->
        <item name="aliwx_bg_color">@color/aliwx_common_bg_white_color</item>
        <!-- 最近联系人分割线颜色 -->
        <item name="aliwx_divider_color">@color/aliwx_divider_color</item>
        <!-- 最近联系人分割线高度 -->
        <item name="aliwx_divider_height">@dimen/aliwx_title_shadow_height</item>
        <!-- 最近联系人显示名称字体大小 -->
        <item name="aliwx_cvsnname_textsize">@dimen/common_text_size</item>
        <!-- 最近联系人显示名称字体颜色 -->
        <item name="aliwx_cvsname_textcolor">@color/common_text_color</item>
        <!-- 最近联系人显示内容字体大小 -->
        <item name="aliwx_cvscontent_textsize">@dimen/font_third_grade</item>
        <!-- 最近联系人显示内容字体颜色 -->
        <item name="aliwx_cvscontent_textcolor">@color/common_text_color2</item>
        <!-- 最近联系人显示时间字体大小 -->
        <item name="aliwx_cvstime_textsize">@dimen/font_third_grade</item>
        <!-- 最近联系人显示时间字体颜色 -->
        <item name="aliwx_cvstime_textcolor">@color/third_text_color</item>
        <!-- 最近联系人标题栏返回可见性 -->
        <item name="aliwx_title_leftbutton_visible">@integer/demo_visible</item>
    </style>

    <style name="ChattingDetailStyle_default" parent="@style/Aliwx_ContentOverlay">

        <!-- 标题栏背景色 -->
        <item name="aliwx_title_backgroud">@color/aliwx_common_bg_white_color</item>
        <!-- 标题栏字体颜色 -->
        <item name="aliwx_title_textcolor">@color/aliwx_common_text_color</item>
        <!-- 标题栏字体大小 -->
        <item name="aliwx_title_textsize">@dimen/aliwx_common_text_size</item>
        <!-- 背景色 -->
        <item name="aliwx_bg_color">@color/blue</item>
 		<!-- 时间背景色 -->
        <item name="aliwx_chattime_bg">@color/blue</item>
        <!-- 左边聊天框背景图片 -->
        <item name="aliwx_comment_left_bg">@drawable/aliwx_comment_l_bg</item>
        <!-- 右边聊天框背景图片 -->
        <item name="aliwx_comment_right_bg">@drawable/aliwx_comment_r_bg</item>
        <!-- 聊天底部条背景图片 -->
        <item name="aliwx_chatbottom_bg">@drawable/aliwx_record_bg</item>
        <!-- 语音发送背景图片 -->
        <item name="aliwx_record_btn_bg">@drawable/aliwx_record_btn_bg</item>
        <!-- 左边文字字体颜色 -->
        <item name="aliwx_chatcontent_left_textcolor">@color/aliwx_black</item>
        <!-- 左边文字字体大小 -->
        <item name="aliwx_chatcontent_left_textsize">@dimen/common_text_size</item>
        <!-- 右边文字字体颜色 -->
        <item name="aliwx_chatcontent_right_textcolor">@android:color/white</item>
        <!-- 右边文字字体大小 -->
        <item name="aliwx_chatcontent_right_textsize">@dimen/common_text_size</item>
        <!-- 聊天标题栏最近联系人按钮是否可见 -->
        <item name="aliwx_title_rightbutton_visible">@integer/demo_visible</item>
        <!-- 聊天标题栏左边文字 -->
        <item name="aliwx_title_left_text">@string/aliwx_back</item>
        <!-- 聊天标题栏左边文字字体大小 -->
        <item name="aliwx_title_left_textsize">@dimen/common_text_size</item>
        <!-- 聊天标题栏左边文字字体颜色 -->
        <item name="aliwx_title_left_textcolor">@drawable/aliwx_commont_title_btn_text</item>
        <!-- 聊天标题栏左边图片 -->
        <item name="aliwx_title_left_icon">@drawable/aliwx_common_back_btn_bg</item>
        <!-- 底部+号按钮背景图片 -->
        <item name="aliwx_chatbottom_expand">@drawable/aliwx_reply_bar_expand</item>
        <!-- 底部表情按钮背景图片 -->
        <item name="aliwx_chatbottom_smily">@drawable/aliwx_reply_bar_face_bg</item>
        <!-- 底部录音按钮背景图片 -->
        <item name="aliwx_chatbottom_record">@drawable/aliwx_reply_bar_record</item>
    </style>

</resources>